sudo: false
dist: trusty
language: python
python:
    - "2.7.13"
#   - "3.6.0"
#   - "nightly"  # currently points to 3.7-dev
# command to install dependencies
install:
    - pip install flake8
# preflight
before_script:
    flake8 . --count --max-line-length=127 --statistics --exit-zero
# command to run tests
# script: nosetests
script: ls  # basic no-op
notifications:
    on_success: change
    on_failure: always
